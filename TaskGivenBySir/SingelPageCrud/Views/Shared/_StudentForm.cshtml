@model CrudUsingCore.Models.Student

<form asp-action="AddOrEdit" asp-controller="Name" method="post">
    <input asp-for="Id" type="hidden" />

    <div class="form-group">
        <label asp-for="FullName"></label>
        <div>
            <input type="text" asp-for="FullName" placeholder="Enter Name" />
            <span class="text-danger" asp-validation-for="FullName"></span>
        </div>

    </div>

    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <div>
            <input type="text" asp-for="Email" placeholder="Enter Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
    

</form>
